<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_married"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helenmiller.taxcalculator.MarriedActivity">

    <TextView
        android:text="@string/txtCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_above="@+id/btnSubmit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="167dp"
        android:id="@+id/txtEnterIncome"
        android:hint="@string/edtIncome"
        android:textSize="30sp"
        android:layout_below="@+id/TaxDue"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/txtEnterIncome"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/txtTaxDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TaxDue"
        android:textSize="66sp"
        android:backgroundTint="@android:color/holo_green_light"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="married"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TaxDue"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/textView3" />
</RelativeLayout>
